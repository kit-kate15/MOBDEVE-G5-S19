<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fltimer"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308">

        <ProgressBar
            android:id="@+id/pbTimer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="10"
            android:progress="10"
            android:rotation="-90"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/red_progressbar_background">
<!--            android:background="@drawable/grey_progressbar_background"-->

        </ProgressBar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvTimeLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="25:00"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/max_red"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="min"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/max_red"/>
        </LinearLayout>
    </FrameLayout>

    <!--    <TextView-->
<!--        android:id="@+id/tv_addTime"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginStart="44dp"-->
<!--        android:layout_marginBottom="160dp"-->
<!--        android:text="+15s"-->
<!--        android:textColor="@color/max_red"-->
<!--        android:textSize="24sp"-->
<!--        android:textStyle="bold"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent" />-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPlayPause"
        android:layout_width="282dp"
        android:layout_height="42dp"
        android:background="@drawable/button_bg"
        android:text="Start"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677"></androidx.appcompat.widget.AppCompatButton>
    <LinearLayout
        android:id="@+id/footericonsLl"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@drawable/footer_shape"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/calendarBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_calendar"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/notesBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_notes"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/pomodoroBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_pomodoro"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/flashCardBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_flash_card"
            android:layout_margin="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


